<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.gustavo.appmedipro.MainActivity"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_weight="0.01"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:fontFamily="monospace"
            android:text="     BIENVENIDO"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.44"
            app:srcCompat="@mipmap/logo"/>

        <Button
            android:id="@+id/botonRegistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="SendData"
            android:background="@android:color/holo_blue_dark"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:text="REGISTRATE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_weight="0.01"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.11"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/botonArnica"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:onClick="SendData"
                android:text="ARNICA"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/botonRomero"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_green_dark"
                android:onClick="SendData"
                android:text="ROMERO"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:orientation="vertical">

            <Button
                android:id="@+id/botonCalemdula"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:onClick="SendData"
                android:text="CALENDULA"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/botonManzanilla"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_green_dark"
                android:onClick="SendData"
                android:text="MANZANILLA"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:text="Esta aplicacion es para dar a conocer los diferentes tipos de pomadas que se utilizan para nuestra salud cutanea"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"/>

</LinearLayout>
